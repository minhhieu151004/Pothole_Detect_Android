<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bground_white_border_gray"
    android:layout_margin="40dp">

    <TextView
        android:id="@+id/dialog_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bground_dialogadd_head_high"
        android:drawableTop="@drawable/warning_ic_white"
        android:padding="15dp"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/dialog_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bground_dialogadd_txtlevel_high"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:dropDownVerticalOffset="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Picture"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/dialog_img"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/add_img"
            android:background="@drawable/bground_white_border_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_Cancel"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#B9B5B5"
                android:background="@drawable/button_radius_10dp"
                android:text="Cancel"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btn_Submit"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bground_dialogadd_btnsubmit_high"
                android:text="Submit"
                android:layout_marginLeft="50dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>