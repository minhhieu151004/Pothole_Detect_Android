<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bground_white_border_gray"
    android:layout_margin="40dp">

    <TextView
        android:id="@+id/dialog_head"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bground_dialogadd_head_high"
        android:text="Do you want to delete?"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:padding="15dp"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_Cancel_del"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#B9B5B5"
                android:background="@drawable/button_radius_10dp"
                android:text="Cancel"
                android:textSize="16dp"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btn_Submit_Delete"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bground_dialogadd_btnsubmit_high"
                android:text="Delete"
                android:layout_marginLeft="50dp"
                android:textSize="16dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>